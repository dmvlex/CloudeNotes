<Window x:Name="SettingsWindow1" x:Class="CloudNotes.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudNotes"
        mc:Ignorable="d"
        Title="SettingsWindow" 
        FontFamily="Consolas"
        Height="250" Width="450" ResizeMode="CanMinimize">
    <Grid x:Name="SettingsGrid" 
          Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.35*"/>
            <RowDefinition Height="0.45*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="LocalSaveFolderPathButton"
                Margin="3" Content="Изменить путь"
                Height="35" Width="100"
                FontSize="10"
                HorizontalAlignment="Right" VerticalAlignment="Center" Click="ChangeLocalFolderButtonClick"/>

        <TextBlock x:Name="PathLabel"
                   Text="Путь к локальной папке сохранения:"
                   Grid.Row="0" Margin="3"
                   HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock x:Name="LocalPathOutput"
                   Grid.Row="1" Margin="3" FontSize="10"
                   VerticalAlignment="Center"/>
        
        
        
    </Grid>
</Window>
